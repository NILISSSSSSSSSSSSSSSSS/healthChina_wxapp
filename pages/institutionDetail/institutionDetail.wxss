

@import "../../template/commonTemplate/commonTemplate.wxss";

page{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.institutionDetailButtonView{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #FFFFFF;
  z-index: 100;
  width: 100%;
  height: 45px;
  box-sizing: border-box;
  /*line-height: 90rpx;*/
  color: #000000;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /*border-bottom: 1rpx solid #e8e8e8;*/
}
.institutionDetailButtonViewLine{
  position: absolute;
  top: 44.5px;
  height: 0.5px;
  width: 100%;
  background-color: #e8e8e8;
}
.institutionDetailButton{
  width: 50%;
  margin: 0;
  padding: 0;
  height: 45px;
  border-radius: 0;
  font-size: 30rpx;
  color: #000000;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /*border-bottom: 1rpx solid #e8e8e8;*/
  position: relative;
  overflow: visible;
}
.institutionDetailButton::after{
  border: none;
}
.selectedButtonLine{
  width: 290rpx;
  text-align: center;
  position: absolute;
  z-index: 250;
  transform: translate(-50%,0);
  left: 50%;
  bottom: 0;
  height: 2px;
  background-color: #1ba5e3;
}
#selectedButton{
  height: 45px;
  color: #1ba5e3;
}
.topEmptyView{
  height: 45px;
  width: 100%;
}
.topButtonText{
  line-height: 45px;
  /*height: 90rpx;*/
  width: 290rpx;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  z-index: 250;
  transform: translate(-50%,0);
  top: 0;
  left: 50%;
  bottom: 0;
}

.institutionDetailButton[disabled][type="default"], .institutionDetailButton[disabled]:not([type]) {
  color: inherit;
  background-color :#ffffff;
}
.addressAndTel[disabled][type="default"], .addressAndTel[disabled]:not([type]) {
  color: inherit;
  background-color :#ffffff;
}
.doctorTeamButton[disabled][type="default"], .doctorTeamButton[disabled]:not([type]) {
  color: inherit;
  background-color :#ffffff;
}

.informationArr{
  height: 100%;
  background-color: #f4f4f4;
  padding-top: 45px;
  box-sizing: border-box;
}
.swiper{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  width: 0;
  height: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: -5rpx;
}
.swiper .wx-swiper-dot{
  width:0;
  display: inline-flex;
  height: 0;
  margin-left: 4rpx;
  justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
  content: '';
  flex-grow: 1;
  /*background-color:#e6e6e6;*/
  width:0;
  height: 0;
  border-radius: 4rpx;
}
.swiper .wx-swiper-dot-active{
  /*background-color:#ffffff;*/
  width: 0;
  height: 0;
  border-radius: 50%;
}
.swiperImgView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  position: relative;
}
.swiperImg{
  width: 100%;
  margin: 0;
}
.swiperSubtitle{
  position: absolute;
  color: #FFFFFF;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  left: 0;
  border-bottom: 28rpx;
  width: 100%;
  max-width: 100%;
  text-align: left;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 0 20rpx;
}
.addressAndTel{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 107rpx;
  border-bottom: 1rpx solid #e8e8e8;
  line-height: 107rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
  border-radius: 0;
}
.addressAndTel::after{
  border: none;
}
.icon_blue_position{
  width: 24rpx;
  height: 32rpx;
  margin: auto 30rpx auto 0;
  flex-shrink: 0;
}
.icon_blue_tel{
  width: 24rpx;
  height: 33rpx;
  margin: auto 30rpx auto 0;
  flex-shrink: 0;
}
.addressName{
  max-width: 100%;
  text-align: left;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #000000;
  font-size: 28rpx;
  height: 107rpx;
  line-height: 107rpx;
}
.institutionDescribeView{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 0 40rpx;
  box-sizing: border-box;
  width: 100%;
  margin-top: 20rpx;
  background-color: #FFFFFF;
}
.institutionDescribeTitle{
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  color: #000000;
  font-size: 34rpx;
  border-bottom: 1rpx solid #e8e8e8;
  text-align: left;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.institutionDescribeText{
  padding: 24rpx 30rpx 0;
  text-align: left;
  color: #666666;
  font-size: 28rpx;
  line-height: 50rpx;
}
.doctorTeamButton{
  border-bottom: 1rpx;
  border-radius: 0;
  background-color: #FFFFFF;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #e8e8e8;
}
.doctorTeamButton::after{
  border: none;
}
.doctorTeamButtonLeft{
  display: flex;
}
.headImgView{
  width: 140rpx;
  height: 140rpx;
  box-sizing: border-box;
  border-radius: 100%;
  overflow: hidden;
  margin: auto 0;
  flex-shrink: 0;
}
.headImg{
  width: 100%;
  height: 100%;
  margin: auto;
  flex-shrink: 0;
}
.doctorTeamButtonLeftCont{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 36rpx;
  box-sizing: border-box;
}
.doctorTeamButtonLeftTitle{
  color: #333333;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: left;
  margin-bottom: 20rpx;
  height: 50rpx;
}
.doctorTeamButtonLeftNum{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.signNumView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0 17rpx 0 14rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #e1f6ff;
  margin-right: 20rpx;
}
.icon_blue_team{
  width: 28rpx;
  height: 27rpx;
  margin: auto 10rpx auto 0;
  flex-shrink: 0;
}
.signNum{
  line-height: 40rpx;
  height: 40rpx;
  text-align: left;
  font-size: 26rpx;
  color: #1ba5e3;
}
.zanNumView{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0 17rpx 0 14rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #fdf1e0;
}
.icon_zan_y{
  width: 28rpx;
  height: 27rpx;
  margin: auto 10rpx auto 0;
}
.zanNum{
  line-height: 40rpx;
  height: 40rpx;
  text-align: left;
  color: #feb247;
  font-size: 26rpx;
}
.icon_arrows_r{
  width: 18rpx;
  height: 27rpx;
  margin: auto 0;
}
.noneImgView{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #ffffff;
}
.noneImg{
  width: 135rpx;
  height: 135rpx;
  margin: 0 auto 0;
  flex-shrink: 0;
  transform: translate(0,-100rpx);
}
.noneText{
  color: #cbd2d7;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  transform: translate(0,-80rpx);
}