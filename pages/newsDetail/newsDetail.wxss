

@import "../../template/scienceDetailTemplate/scienceDetailTemplate.wxss";
@import "../../template/commonTemplate/commonTemplate.wxss";

page{
  width: 100%;
  background-color: #FFFFFF;
}
.scienceDetailTextContFlex{
  padding: 0!important;
}
.scienceDetailText{
  margin-top: 20rpx!important;
}
.scienceDetailTextCont{
  padding: 0!important;
  border-bottom: none!important;
}
.newsDetailScrollView{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.newsInfoTitle{
  font-size: 46rpx;
  color: #000000;
  /*font-weight: bold;*/
  line-height: 60rpx;
  text-align: left;
}
.newsInfo_institutions{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 25rpx;
}
.newsInfo_institutions_left{
  display: flex;
}
.newsInfo_institutions_img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx 0 0;
  flex-shrink: 0;
}
.newsInfo_institutions_name{
  color: #000000;
  font-size: 26rpx;
  line-height: 50rpx;
  text-align: left;
}
.newsInfo_institutions_time{
  text-align: left;
  color: #999999;
  font-size: 22rpx;
  line-height: 50rpx;
}
.newsInfo_doctorInfo{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 25rpx;
}
.newsInfo_doctorInfo_headImg_cont{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: 100%;
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx auto 0;
}
.newsInfo_doctorInfo_headImg{
  width: 100%;
  height: 100%;
  margin: auto;
}
.newsInfo_doctorInfo_cont{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.newsInfo_doctorInfo_name{
  color: #000000;
  font-size: 26rpx;
  line-height: 30rpx;
  margin-bottom: 2rpx;
  text-align: left;
}
.newsInfo_doctorInfo_address{
  text-align: left;
  color: #999999;
  font-size: 26rpx;
  line-height: 30rpx;
}
.newsInfo_audioInfo{
  margin-top: 37rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 20rpx 0 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #e8e8e8;
  border-radius: 6rpx;
}
.audioPlayButton{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0;
  margin: auto 30rpx auto 0;
  flex-shrink: 0;
  border-radius: 100%;
  background-color: #FFFFFF;
}
.audioPlayButton::after{
  border: none;
}
.newsInfo_audioInfo_audioPlayImg{
  width: 85rpx;
  height: 85rpx;
  margin: auto;
  flex-shrink: 0;
}
.newsInfo_audioInfo_cont{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 26rpx 0 28rpx;
  box-sizing: border-box;
  width: 100%;
}
.newsInfo_audioInfo_title{
  color: #333333;
  font-size: 28rpx;
  line-height: 35rpx;
  text-align: left;
}
.newsInfo_audioInfo_time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.newsInfo_audioInfo_sliderTime,.newsInfo_audioInfo_audioTime{
  color: #cccccc;
  font-size: 24rpx;
  line-height: 30rpx;
  height: 30rpx;
}
.newsInfoDescribeImg{
  width: 100%;
  margin-top: 40rpx;
  height: auto\9!important;
  max-height: 100%\9;
}
.newsInfoContent{
  margin-top: 25rpx;
  line-height: 50rpx;
  text-align: left;
  color: #666666;
  font-size: 30rpx;
}
.emptyView{
  width: 100%;
  height: 60rpx;
}

.clickZanButton{
  position: fixed;
  bottom: 68rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  margin: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 100%;
  border: none;
  z-index: 100;
  background-color: #1ba5e3;
}
.clickZanButton::after{
  border: none;
}
.clickZanSuccess{
  position: fixed;
  bottom: 170rpx;
  right: 40rpx;
  width: 100rpx;
  z-index: 100;
  color: #1ba5e3;
  font-size: 35rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.hoverClass{
  opacity:1;
}
.clickZanImg{
  width: 100%;
  height: 100%;
  margin: auto;
}

.newsInfo_audioInfo_slider .wx-slider-handle[disabled][type="default"], .newsInfo_audioInfo_slider .wx-slider-handle[disabled]:not([type]) {
  color: inherit;
  background: #1ba5e3;
}

.newsInfo_audioInfo_slider .wx-slider-handle{
  width: 20rpx;
  height: 20rpx;
  background: #1ba5e3;
  margin-top: -10rpx;
  margin-left: -10rpx;
}