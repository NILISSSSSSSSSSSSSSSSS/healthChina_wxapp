

.newsBtn{
  border-radius: 0;
  padding: 40rpx 0;
  box-sizing: border-box;
  margin: 0;
  background-color: #FFFFFF;
  text-align: left;
  width: 100%;
  border-bottom: 1rpx solid #e8e8e8;
}
.newsBtn::after{
  border: none;
}
.newsBtn[disabled][type="default"], .newsBtn[disabled]:not([type]) {
  color: inherit;
  background-color :#ffffff;
}
.newsBtnMoreTextHide{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  box-orient:vertical;
  line-clamp:2;
  text-align: justify;
}
.newsBtnOneTextHide{
  text-align: left;
  max-width: 9em;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.informationImgButton{
